<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_background</item>
        <item name="colorPrimaryVariant">@color/default_background</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/stroke_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/default_background</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <!--prevent white background when startup app-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
    <style name="Theme.BaseApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BaseApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BaseApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Custom color dialog button color start-->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="background">@color/dialog_background_color</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_color</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_color</item>
    </style>
    <!--Custom color dialog button color end-->

    <style name="CommonButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">60dp</item>
        <item name="android:backgroundTint">@color/color_states_material_button</item>
        <item name="rippleColor">@color/stroke_color</item>
        <item name="android:textColor">@color/white</item>

        <item name="fontFamily">@macro/m3_ref_typeface_plain_medium</item>
        <item name="android:fontFamily">@macro/m3_ref_typeface_plain_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.00714286</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMedium_14sp" parent="TextAppearance.Material3.BodyMedium">
    </style>

    <style name="TextMedium_16sp" parent="TextAppearance.Material3.BodyLarge">
    </style>

    <style name="TextDisplayMedium_45sp" parent="TextAppearance.Material3.DisplayMedium">
    </style>

    <style name="TextTitleLarge_22sp" parent="TextAppearance.Material3.TitleLarge">
    </style>

    <style name="TextTitleMedium_16sp" parent="TextAppearance.Material3.TitleMedium">
    </style>

    <style name="TextLabelLarge_14sp" parent="TextAppearance.Material3.LabelLarge">
    </style>

</resources>